{
  "name": "gtav-audio-occlusion",
  "version": "2.0.2",
  "author": "https://github.com/pedr0fontoura",
  "description": "A tool for generating audio occlusion for V MLOs.",
  "main": "./.webpack/main",
  "license": "MIT",
  "scripts": {
    "start": "electron-forge start",
    "test": "jest",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "electron-forge publish"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "gtav-audio-occlusion",
        "executableName": "gtav-audio-occlusion",
        "icon": "./src/electron/renderer/assets/icon",
        "extraResource": [
          "./src/electron/renderer/assets"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "name": "main_window",
                  "html": "./src/electron/renderer/index.html",
                  "js": "./src/electron/renderer/index.tsx",
                  "preload": {
                    "js": "./src/electron/bridge.ts"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/plugin-transform-runtime": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@svgr/webpack": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^15.14.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.4.1",
    "electron": "^36.3.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^3.4.1",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "node-loader": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.3",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "electron-store": "^10.0.1",
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.30.1",
    "styled-components": "^6.1.18",
    "typescript": "^5.8.3",
    "xml2js": "^0.4.23"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
